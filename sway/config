# Basic Sway configuration

# Set the default mod key (Mod4 is usually the "Super" key or "Windows" key)
set $mod Mod4

# Set your terminal emulator, web browser, and file manager
set $term kitty
set $browser firefox
set $filemanager nautilus

# Start a terminal with $mod+Return
bindsym $mod+Return exec $term

# Start Firefox with $mod+F
bindsym $mod+B exec $browser

# Start Nautilus with $mod+E
bindsym $mod+F exec $filemanager

# Exit Sway with $mod+Shift+E
bindsym $mod+Shift+E exit

# Reload the configuration file with $mod+Shift+R
bindsym $mod+Shift+R reload

# Floating windows toggle with $mod+Shift+Space
bindsym $mod+Shift+Space floating toggle

# Move focus between windows
bindsym $mod+h focus left
bindsym $mod+j focus down
bindsym $mod+k focus up
bindsym $mod+l focus right

# Move windows
bindsym $mod+Shift+h move left
bindsym $mod+Shift+j move down
bindsym $mod+Shift+k move up
bindsym $mod+Shift+l move right

# Workspace management
bindsym $mod+1 workspace 1
bindsym $mod+2 workspace 2
bindsym $mod+3 workspace 3
bindsym $mod+4 workspace 4
bindsym $mod+5 workspace 5

# Switch to the next/previous workspace
bindsym $mod+Tab workspace next
bindsym $mod+Shift+Tab workspace prev

# Sway Bar Config
bar {
    position top
    status_command i3status
} 

 
# Set the wallpaper (located in ~/Documents)
output * bg ~/Documents/wallpaper.jpg fill

# Remove borders and add gaps
default_border none
gaps inner 10
gaps outer 10
